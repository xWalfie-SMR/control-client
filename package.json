{
  "name": "control-client",
  "version": "1.0.0",
  "description": "Cross-platform control client for Discord AI Bot - executes PC automation commands via WebSocket on Windows and Linux (Wayland)",
  "homepage": "https://github.com/xWalfie-SMR/control-client#readme",
  "bugs": {
    "url": "https://github.com/xWalfie-SMR/control-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xWalfie-SMR/control-client.git"
  },
  "license": "MIT",
  "author": "xWalfie",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
